{
  "manifest_version": 3,
  "name": "Slang Decoder",
  "version": "1.0.0",
  "description": "Decode slang and short forms with a right-click context menu",
  "permissions": [
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Slang Decoder"
  }
}
